{
  "name": "typescript-uml",
  "displayName": "Typescript UML",
  "description": "Create uml diagrams of typescript files",
  "version": "0.0.1",
  "publisher": "ottostreifel",
  "engines": {
    "vscode": "^1.14.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tsuml.show"
  ],
  "main": "out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "tsuml.show",
        "title": "Show typescript uml"
      }
    ],
    "keybindings": [
      {
        "command": "tsuml.show",
        "key": "Shift+Alt+T"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:ts & npm run build:sass",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:sass\"",
    "build:ts": "tsc -p ./",
    "build:sass": "node ./node_modules/node-sass/bin/node-sass html/scss -o html/css",
    "watch:ts": "tsc -watch -p ./",
    "watch:sass": "node ./node_modules/node-sass/bin/node-sass -w html/scss -o html/css",
    "postinstall": "node ./node_modules/vscode/bin/install && typings install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/jquery": "^3.2.9",
    "@types/mocha": "^2.2.41",
    "@types/node": "^6.0.40",
    "@types/react": "^15.0.39",
    "@types/react-dom": "^15.5.1",
    "child_process": "^1.0.2",
    "concurrently": "^3.5.0",
    "cytoscape": "^3.1.3",
    "electron": "^1.6.11",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "office-ui-fabric-react": "^4.30.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "tslint": "^5.5.0",
    "tsutils": "^2.7.1",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  }
}
