{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": false,
        "outDir": "out",
        "rootDir": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}